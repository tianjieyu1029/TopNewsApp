<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_pager"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.bwie.test.topnewsapp.activity.HomePagerActivity">

    <include layout="@layout/include_head_login"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="match_parent"
                   android:src="@mipmap/profile_bg"
                   android:scaleType="centerCrop"
                   android:layout_height="250dp"
                   android:id="@+id/imageView2" android:layout_alignParentTop="true"
                   android:layout_alignParentStart="true"/>

        <ImageView android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:src="@mipmap/ic_launcher"
                   android:id="@+id/home_pager_image"
                   android:layout_marginStart="27dp" android:layout_marginTop="206dp"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/home_pager_text"
        android:layout_toRightOf="@id/home_pager_image"
                  android:layout_marginLeft="20dp"
                  android:text="1111"
                  android:textSize="20sp"
                  android:layout_alignTop="@+id/home_pager_image"/>

        <CheckBox android:layout_width="80dp"
                  android:id="@+id/home_pager_check"
                  android:layout_height="wrap_content"
                  android:button="@null"
                  android:drawableLeft="@mipmap/profile_action_set_icon"
                  android:text="设置"
                  android:drawablePadding="5dp"
                  android:layout_below="@id/imageView2"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="20dp"
                  android:layout_marginTop="5dp"
                  android:background="@drawable/home_set_bg"/>
        <TextView android:layout_width="80dp"
                  android:id="@+id/home_pager_text_gone"
                  android:layout_height="wrap_content"
                   android:text="重新登录"
                  android:visibility="gone"
                  android:textSize="13sp"
                  android:gravity="center"
                  android:layout_below="@id/imageView2"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="20dp"
                  android:layout_marginTop="5dp"
                  android:background="@drawable/home_set_bg"

        />
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="20dp"
                  android:paddingBottom="20dp"
                  android:orientation="horizontal"
    >
        <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="20dp"
                      android:text="订阅"
                      android:textColor="#09145b"
    />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0  丨"
                  android:layout_marginLeft="10dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingLeft="20dp"
                  android:text="关注"
                  android:textColor="#09145b"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0  丨"
                  android:layout_marginLeft="10dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingLeft="20dp"
                  android:text="粉丝"
                  android:textColor="#09145b"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0  "
                  android:layout_marginLeft="10dp"
        />
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="#999999"/>
    <TextView android:layout_width="match_parent"
              android:text="点击加载更多"
              android:layout_marginTop="15dp"
              android:textColor="#000000"
              android:gravity="center"
              android:layout_height="wrap_content"/>
</LinearLayout>
